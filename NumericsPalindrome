package numerics;

public class NumberPalindrome 
{
	static void check()
	{
		int num1=123, num2=num1;
		int sum=0;
		int i=0,counter=0;
		while(num1!=0)
		{
		 i= num1 % 10;
		 sum= (sum*10)+i;
		 num1= num1/10;
		 counter++;
		} System.out.println(sum);
		if(num2==sum)
		{
			System.out.println("Given No. "+num2+" is a Palindrome!!!");
		}
		else
		{
			System.out.println("Given No. "+num2+" is 'not' a Palindrome!!!");
		}
	}
	public static void main(String[] args) 
	{
	 check();
	}
}
